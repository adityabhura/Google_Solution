<%- include("partials/header") %>

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-auto">
            <div class="products" style="align-items: center; justify-content: center;">
                <div class="row">
                <div class="column justify-content-md-center">
                <% user.myproducts.forEach(function(product){ %>    
                    <div class="ui link cards" style="padding-top: 15px; padding-bottom: 15px;">
                        <div class ="card">
                            <div class="image">
                                <img src="../../<%= product.image[0] %>">
                            </div>  
                            <div class="content">
                                <div class="header"><%= product.title %></div>
                                <div class="meta">Uploaded on <%= product.Created.toDateString() %></div>
                            </div>
                            <div class="extra content">
                            <a href="/products/<%= product._id %>" class="right floated"><button class="ui inverted primary button">Details</button></a>
                                <div class="header">Rs <%= product.amount %>/Week</div>
                            </div>         
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>
</div>

<%- include("partials/footer") %>