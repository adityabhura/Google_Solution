<%- include("partials/header") %>

<div class="container" >
    <div class="container form bg-white pt-5 mt-4 mb-3" >
        <form action="/products/<%= product._id %>/comment"  method="POST" class="ui form">
        <p class="text-center login-heading hide-me">New Comment for <%= product.title %></p>
        <div class="container hide-me">
            <div class="row">
                <div class="col mt-4 pl-5 pr-5">
                    <p class="username">Comment</p>
                    <div class="row mt-4">
                        <div class="col-10 pl-0">
                            <textarea name="comment" placeholder="Comment(Max lenght = 100 words)" required maxlength="100" height="48"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col pl-5 pr-5">
                    <button class="btn btn-block text-white login-button text-white">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>


<%- include("partials/footer") %>